<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<TableLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_margin="3dp"
	    android:padding="3dp"
	    android:stretchColumns="1"
	    android:background="@drawable/retangle_drawable" >

        <TableRow>
            <TextView
                android:text="ID:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <EditText
                android:id="@+id/id_update_edit"
                android:focusable="false"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>    
                 	
	    <TableRow>
	        <TextView
	            android:text="Latitude:"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        <EditText
                android:id="@+id/latitude_update_edit"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceMedium" />
	    </TableRow>    
	    
	    <TableRow>
	        <TextView
                android:text="Longitude"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <EditText
                android:id="@+id/longitude_update_edit"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceMedium" />
	    </TableRow>
         
        <TableRow>
            <TextView
                android:text="Accuracy:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <EditText
                android:id="@+id/accuracy_update_edit"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="DateTime:"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <EditText
                android:id="@+id/datetime_update_edit"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>        

	    <TableRow>
	        <TextView
                android:text="Note:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/note_update_edit"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceMedium" />
	    </TableRow>
	</TableLayout>
	
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:background="@drawable/retangle_drawable" >
        <Button
            android:id="@+id/cancel_update_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@android:string/cancel"
            android:onClick="clickCancel"  />            
        <Button
            android:id="@+id/ok_update_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@android:string/ok"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:onClick="clickOk" />
    </LinearLayout>
      
</LinearLayout>